
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         android:background="#e1e1e1">
 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Inscription"
        android:layout_marginTop="20dip"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/ed_cin"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:inputType="number"
        android:maxLength="8"
        android:ems="10"
        android:hint="N°CIN ?" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ed_nom"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:ems="10"
        android:hint="Nom ?" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ed_prenom"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:ems="10"
        android:hint="Prénom ?" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ed_adresse"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:ems="10"
        android:hint="Adresse ?" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/sp_ville"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/ed_naissance"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:ems="10"
        android:hint="Date Naissance ?" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ed_gsm"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:inputType="number"
        android:maxLength="8"
        android:ems="10"
        android:hint="N° GSM ?" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ed_mail"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:ems="10"
        android:hint="E-Mail ?" >

        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/ed_login"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:ems="10"
        android:hint="Login ?" >

        <requestFocus />
    </EditText>
    
    <EditText
        android:id="@+id/ed_password"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:ems="10"
        android:hint="Password ?" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bt_inscription"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="S&apos;incrire" />
    
</LinearLayout>
    </ScrollView> 