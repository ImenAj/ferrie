<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <ImageButton
        android:id="@+id/bt_produit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45dip"
        android:background="@null"
        android:src="@drawable/bt_produit" />

    <ImageButton
        android:id="@+id/bt_promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dip"
        android:background="@null"
        android:src="@drawable/bt_promo" />

    <ImageButton
        android:id="@+id/bt_compte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dip"
        android:background="@null"
        android:src="@drawable/bt_compte" />

    <ImageButton
        android:id="@+id/bt_boutique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dip"
        android:background="@null"
        android:src="@drawable/bt_boutiques" />

             
</LinearLayout>